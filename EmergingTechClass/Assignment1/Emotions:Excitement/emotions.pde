void setup() {
  size(500, 500);
  background(255);
  frameRate(10);
  
}

void draw() {
pushMatrix();
rectMode(CENTER);
fill(0,0,200);
strokeWeight(.1);
translate(250,250);
rotate(frameCount);
scale(mouseX/50);
ellipse(0,0,100,100);
popMatrix();
pushMatrix();
fill(100,0,200);
stroke(.5);
translate(250,250);
rotate(frameCount);
rect(0,0,350,350);
popMatrix();
pushMatrix();
fill(100,0,100);
stroke(.5);
translate(250,250);
rotate(-frameCount+100);
rect(0,0,300,300);
popMatrix();
pushMatrix();
fill(200,0,200);
stroke(.5);
translate(250,250);
rotate(frameCount);
ellipse(0,0,270,270);
popMatrix();
pushMatrix();
rectMode(CENTER);
fill(200,0,100);
stroke(.5);
translate(250,250);
rotate(frameCount+200);
rect(0,0,200,200);
popMatrix();
pushMatrix();
rectMode(CENTER);
fill(200,0,0);
stroke(.5);
translate(250,250);
rotate(-frameCount+250);
rect(0,0,150,150);
popMatrix();
pushMatrix();
rectMode(CENTER);
fill(200,100,0);
stroke(.5);
translate(250,250);
rotate(frameCount+300);
rect(0,0,100,100);
popMatrix();
pushMatrix();
fill(0,150,0);
stroke(.5);
translate(250,250);
rotate(-frameCount+350);
rect(0,0,50,50);
popMatrix();
}
